generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Type {
  TWITTER
  YOUTUBE
  GITHUB
  REDDIT
  WEB
}

model user {
  id            Int       @id @default(autoincrement())
  firstName     String
  lastName      String
  password      String
  verified      Boolean   @default(false)
  session_token String    @default("-1")
  email         String?   @unique
  createdAt     DateTime? @default(now())
}

model Route {
  id        Int      @id @default(autoincrement())
  creator   String
  start     String
  end       String
  startLat  Float
  startLon  Float
  endLat    Float
  endLon    Float
  places    Place[]
}

model Place {
  id        Int     @id @default(autoincrement())
  routeId   Int
  name      String
  longitude Float
  latitude  Float
  route     Route   @relation(fields: [routeId], references: [id])
}
